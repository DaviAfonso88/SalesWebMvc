@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h2 class="text-primary">@ViewData["Title"]</h2>

    <h4 class="mt-4 mb-4">Seller</h4>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Seller.Id" />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Seller.Name" class="control-label">Seller Name</label>
                        <input asp-for="Seller.Name" class="form-control" />
                        <span asp-validation-for="Seller.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Seller.Email" class="control-label">Email</label>
                        <input asp-for="Seller.Email" class="form-control" />
                        <span asp-validation-for="Seller.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Seller.BirthDate" class="control-label">Birth Date</label>
                        <input asp-for="Seller.BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Seller.BaseSalary" class="control-label">Base Salary</label>
                        <input asp-for="Seller.BaseSalary" type="number" class="form-control" />
                        <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Seller.DepartmentId" class="control-label">Department</label>
                        <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control">
                            <option value="">Select Department</option>
                        </select>
                        <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 text-center">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to list</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
