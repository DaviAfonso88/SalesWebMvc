@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-danger">@ViewData["Title"]</h1>

    <h3 class="mt-4 mb-4">Are you sure you want to delete this?</h3>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Seller Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BaseSalary)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BaseSalary)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to list</a>
            </form>
        </div>
    </div>
</div>
